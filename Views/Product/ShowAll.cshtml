

@model List<Product>

    @Model

<table class="table table-bordered">

    @foreach(Product item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td><img src="~/Images/@item.Image" style="width:100px"/></td>
            <td><a href="Details/@item.Id">Show Details</a></td>

        </tr>
    }

</table>